<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.myfriend.WelcomeFragment"
        android:label="Welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.myfriend.HomeFragment"
        android:label="Daftar Teman">
        <action
            android:id="@+id/action_homeFragment_to_addFriendFragment"
            app:destination="@id/addFriendFragment" />
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment">
            <argument
                android:name="friendId"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/addFriendFragment"
        android:name="com.example.myfriend.AddFriendFragment"
        android:label="Tambah Teman" />

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.myfriend.DetailFragment"
        android:label="Detail Teman">
        <argument
            android:name="friendId"
            app:argType="string" />
        <action
            android:id="@+id/action_detailFragment_to_editFriendFragment"
            app:destination="@id/editFriendFragment">
            <argument
                android:name="friendId"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/editFriendFragment"
        android:name="com.example.myfriend.EditFriendFragment"
        android:label="Edit Teman">
        <argument
            android:name="friendId"
            app:argType="string" />
    </fragment>
</navigation>